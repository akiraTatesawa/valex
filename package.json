{
  "name": "valex",
  "version": "1.0.0",
  "description": "Valex is a voucher card API. The API is responsible for creating, reloading, activating, as well as processing purchases.",
  "main": "dist/server.js",
  "scripts": {
    "test": "dotenv -e .env.test -- npx prisma migrate dev && dotenv -e .env.test -- jest --runInBand",
    "test:unit": "dotenv -e .env.test -- jest unit",
    "test:entity": "dotenv -e .env.test -- jest entity",
    "test:int": "dotenv -e .env.test -- npx prisma migrate dev && dotenv -e .env.test -- jest int --runInBand",
    "test:compose": "docker-compose -f docker-compose.test.yml --env-file .env.test",
    "test:postgres": "npm run test:compose -- up -d valex-postgres-test",
    "test:docker": "npm run test:compose -- up",
    "test:docker:down": "npm run test:compose -- down",
    "build": "npx tsc && npx prisma generate && npx prisma migrate deploy && npx prisma db seed",
    "start": "node ./dist/src/server.js",
    "dev": "dotenv -e .env.development -- ts-node-dev --respawn --transpile-only --exit-child --ignore-watch node_modules ./src/server.ts",
    "dev:migrate": "dotenv -e .env.development -- npx prisma generate && dotenv -e .env.development -- npx prisma migrate dev",
    "dev:compose": "docker-compose -f docker-compose.development.yml --env-file .env.development",
    "dev:postgres": "npm run dev:compose -- up -d valex-postgres-development",
    "dev:docker": "npm run dev:compose -- up",
    "dev:docker:down": "npm run dev:compose -- down",
    "dev:docker:seed": "npm run dev:compose -- exec -d valex-development npx prisma db seed",
    "dev:seed": "npm run dev:migrate && dotenv -e .env.development -- npx prisma db seed",
    "ci:test": "dotenv -e .env.test -- npx prisma migrate dev && dotenv -e .env.test -- jest --runInBand"
  },
  "prisma": {
    "seed": "ts-node prisma/Seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akiraTatesawa/valex.git"
  },
  "author": "Arthur Akira Tatesawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akiraTatesawa/valex/issues"
  },
  "homepage": "https://github.com/akiraTatesawa/valex#readme",
  "dependencies": {
    "@ngneat/falso": "^6.1.0",
    "@prisma/client": "^4.5.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cryptr": "^6.0.3",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.5.3",
    "joi": "^17.6.4",
    "node": "^19.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.23",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/cryptr": "^4.0.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.8",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
